<?xml version="1.0" encoding="utf-8" ?>
<Shell 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Network_measurement_frontend.Pages.HomePage"
    xmlns:local="clr-namespace:Network_measurement_frontend.Pages">
    
    <TabBar>
        <Tab Title="SpeedTest"
             Icon="">
            <ShellContent
        ContentTemplate="{DataTemplate local:SpeedTestPage}"
        Route="SpeedTestPage" />
        </Tab>
        
        <Tab Title="WSS"
             Icon="">
            <ShellContent
        ContentTemplate="{DataTemplate local:WSSPage}"
        Route="WSSPage" />
        </Tab>
        
        <Tab Title="Report"
             Icon="">
            <ShellContent
        ContentTemplate="{DataTemplate local:ReportPage}"
        Route="ReportPage" />
        </Tab>

        <Tab Title="Settings"
             Icon="">
            <ShellContent
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />
        </Tab>
    </TabBar>
</Shell>