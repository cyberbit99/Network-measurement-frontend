<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:Network_measurement_frontend.Pages"
             x:Class="Network_measurement_frontend.Pages.LoginPage">
    <VerticalStackLayout VerticalOptions="Center" Margin="20, 0,20, 0" Spacing="20">
        <Frame x:Name="Warning" BackgroundColor="OrangeRed" IsVisible="false" >
            <Label x:Name="Warningmsg" TextColor="White"/>
        </Frame>
        <Label Text="Network-measurement" FontSize="25" HorizontalOptions="Center" FontAttributes="Bold"/>

        <Entry x:Name="EntUsername" Placeholder="Username" />
        <Entry x:Name="EntPassword" Placeholder="Password" IsPassword="True" />
        <VerticalStackLayout VerticalOptions="Center" Spacing="20">
            <Button x:Name="BtnLogin" Text="Login" HeightRequest="50" FontSize="Medium" Clicked="btn_Login"/>
            <Button x:Name="BtnRegistration" Text="Registration" HeightRequest="50" FontSize="Medium" Clicked="btn_RegistrationPage_Jump"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>