<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Network_measurement_frontend.Pages"
             x:Class="Network_measurement_frontend.Pages.WSSPage">
    <VerticalStackLayout VerticalOptions="Center" Margin="20, 0,20, 0" Spacing="20">
        <Label Text="50" FontSize="100" HorizontalOptions="Center" FontAttributes="Bold"/>
        <ListView x:Name="itemListView" MaximumHeightRequest="200">
            <ListView.ItemsSource>
                
            </ListView.ItemsSource>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="BtnMeasureActual" Text="Measure actual"  HeightRequest="50" FontSize="Medium"/>
        <Button x:Name="BtnMeasureAll" Text="Measure all"  HeightRequest="50" FontSize="Medium"/>

        <Button x:Name="BtnSpeedTest" Text="Add to the report"  HeightRequest="50" FontSize="Medium" BackgroundColor="DeepSkyBlue"/>

    </VerticalStackLayout>
</ContentPage>