<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Network_measurement_frontend.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Network_measurement_frontend"
    xmlns:locals="clr-namespace:Network_measurement_frontend.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate locals:LoginPage}"
        Route="LoginPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate locals:HomePage}"
        Route="HomePage" />

    <ShellContent
        ContentTemplate="{DataTemplate locals:RegistrationPage}"
        Route="RegistrationPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate locals:ReportEditorPage}"
        Route="ReportEditorPage" />

</Shell>
